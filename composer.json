{
    "name": "brain/amygdala",
    "description": "Simplify request sniffing and getting in WordPress.",
    "authors": [
        {
            "name": "Giuseppe Mazzapica",
            "email": "giuseppe.mazzapica@gmail.com",
            "homepage": "http://gm.zoomlab.it",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/Giuseppe-Mazzapica/Amygdala/issues",
        "source": "https://github.com/Giuseppe-Mazzapica/Amygdala"
    },
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.4",
        "brain/brain": "~0.1.0",
        "brain/support": "~0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.9.3"
    },
    "autoload": {
        "files": ["boot.php"],
        "psr-4": {
            "Brain\\Amygdala\\": "src/"
        },
        "classmap": ["Request.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Brain\\Amygdala\\Tests\\": "tests/src/"
        }
    },
    "config": {
        "optimize-autoloader": true
    }
}
